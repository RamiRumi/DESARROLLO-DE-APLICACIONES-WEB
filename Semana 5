<body>
    <div class="container">
        <header>
            <div class="logo">
                <i class="fas fa-cubes logo-icon"></i>
                <h1 class="logo-text">Nexus Gallery</h1>
            </div>
            <button class="theme-toggle" id="themeToggle">
                <i class="fas fa-moon"></i>
            </button>
        </header>

        <section class="input-section">
            <h2 class="input-title">
                <i class="fas fa-link"></i> Agregar Nueva Imagen
            </h2>
            <div class="input-group">
                <input type="url" class="url-input" id="imageUrl" placeholder="Pega la URL de una imagen (ej: https://example.com/imagen.jpg)" autocomplete="off">
                <button class="btn btn-primary" id="addButton">
                    <i class="fas fa-plus-circle"></i> Agregar Imagen
                </button>
            </div>
            <div class="controls">
                <h2 class="gallery-title">
                    <i class="fas fa-images"></i> Galería de Imágenes
                    <span class="counter" id="imageCounter">0 imágenes</span>
                </h2>
                <button class="btn btn-danger" id="deleteButton" disabled>
                    <i class="fas fa-trash-alt"></i> Eliminar Imagen Seleccionada
                </button>
            </div>
        </section>

        <section class="gallery-container" id="gallery">
            <!-- Las imágenes se agregarán aquí dinámicamente -->
            <div class="empty-state" id="emptyState">
                <i class="fas fa-image empty-icon"></i>
                <h3 class="empty-text">La galería está vacía</h3>
                <p>Agrega tu primera imagen usando el campo de URL arriba</p>
            </div>
        </section>

        <section class="instructions">
            <h3><i class="fas fa-info-circle"></i> Instrucciones de uso</h3>
            <ul>
                <li>Pega una URL de imagen en el campo de texto y haz clic en "Agregar Imagen"</li>
                <li>Haz clic en cualquier imagen para seleccionarla (se resaltará con un borde azul)</li>
                <li>Solo puedes tener una imagen seleccionada a la vez</li>
                <li>Usa el botón "Eliminar Imagen Seleccionada" para quitar la imagen actualmente seleccionada</li>
                <li>También puedes eliminar imágenes individualmente desde el menú que aparece al pasar el cursor sobre ellas</li>
                <li>Cambia entre modo claro y oscuro con el botón de la luna en la esquina superior derecha</li>
            </ul>
        </section>
    </div>

    <div id="toastContainer"></div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Elementos del DOM
            const gallery = document.getElementById('gallery');
            const imageUrlInput = document.getElementById('imageUrl');
            const addButton = document.getElementById('addButton');
            const deleteButton = document.getElementById('deleteButton');
            const themeToggle = document.getElementById('themeToggle');
            const imageCounter = document.getElementById('imageCounter');
            const emptyState = document.getElementById('emptyState');
            const toastContainer = document.getElementById('toastContainer');
            
            // Variables de estado
            let selectedImage = null;
            let imageCount = 0;
            let isDarkMode = false;
            
            // Imágenes por defecto para precargar la galería
            const defaultImages = [
                'https://images.unsplash.com/photo-1506744038136-46273834b3fb',
                'https://images.unsplash.com/photo-1519681393784-d120267933ba',
                'https://images.unsplash.com/photo-1441974231531-c6227db76b6e',
                'https://images.unsplash.com/photo-1518837695005-2083093ee35b',
                'https://images.unsplash.com/photo-1470071459604-3b5ec3a7fe05',
                'https://images.unsplash.com/photo-1465146344425-f00d5f5c8f07'
            ];
            
            // Inicializar la galería con imágenes por defecto
            function initializeGallery() {
                defaultImages.forEach(url => {
                    // Añadir parámetros para optimizar las imágenes de Unsplash
                    const optimizedUrl = `${url}?w=800&h=800&fit=crop&crop=entropy&q=80`;
                    addImageToGallery(optimizedUrl);
                });
            }
            
            // Crear partículas visuales
            function createParticles(x, y, color, count = 15) {
                for (let i = 0; i < count; i++) {
                    const particle = document.createElement('div');
                    particle.className = 'particle';
                    particle.style.left = `${x}px`;
                    particle.style.top = `${y}px`;
                    particle.style.width = `${Math.random() * 10 + 5}px`;
                    particle.style.height = particle.style.width;
                    particle.style.backgroundColor = color;
                    particle.style.opacity = '0.8';
                    
                    document.body.appendChild(particle);
                    
                    // Animación de partículas
                    const angle = Math.random() * Math.PI * 2;
                    const speed = Math.random() * 3 + 2;
                    const duration = Math.random() * 1000 + 500;
                    
                    const animation = particle.animate([
                        { transform: 'translate(0, 0) scale(1)', opacity: 0.8 },
                        { transform: `translate(${Math.cos(angle) * speed * 100}px, ${Math.sin(angle) * speed * 100}px) scale(0)`, opacity: 0 }
                    ], {
                        duration: duration,
                        easing: 'cubic-bezier(0.215, 0.61, 0.355, 1)'
                    });
                    
                    animation.onfinish = () => particle.remove();
                }
            }
            
            // Mostrar notificación toast
            function showToast(message, type = 'info') {
                const toast = document.createElement('div');
                toast.className = `toast ${type}`;
                
                const icon = type === 'success' ? 'fa-check-circle' : 
                             type === 'error' ? 'fa-exclamation-circle' : 
                             'fa-info-circle';
                
                toast.innerHTML = `
                    <i class="fas ${icon}"></i>
                    <span>${message}</span>
                `;
                
                toastContainer.appendChild(toast);
                
                // Mostrar toast
                setTimeout(() => toast.classList.add('show'), 10);
                
                // Ocultar y eliminar después de 3 segundos
                setTimeout(() => {
                    toast.classList.remove('show');
                    setTimeout(() => toast.remove(), 500);
                }, 3000);
            }
            
            // Validar URL de imagen
            function isValidImageUrl(url) {
                if (!url) return false;
                
                // Patrón para verificar extensiones comunes de imágenes
                const pattern = /\.(jpeg|jpg|gif|png|webp|bmp|svg|tiff)(\?.*)?$/i;
                return pattern.test(url) || url.includes('unsplash.com') || url.includes('picsum.photos');
            }
            
            // Actualizar contador de imágenes
            function updateImageCounter() {
                imageCount = gallery.querySelectorAll('.image-card').length;
                imageCounter.textContent = `${imageCount} imagen${imageCount !== 1 ? 'es' : ''}`;
                
                // Mostrar u ocultar estado vacío
                if (imageCount === 0) {
                    emptyState.style.display = 'block';
                } else {
                    emptyState.style.display = 'none';
                }
            }
            
            // Agregar imagen a la galería
            function addImageToGallery(url, showNotification = true) {
                if (!isValidImageUrl(url)) {
                    showToast('Por favor, introduce una URL válida de imagen', 'error');
                    return;
                }
                
                // Crear tarjeta de imagen
                const imageCard = document.createElement('div');
                imageCard.className = 'image-card';
                
                // Crear elemento de imagen
                const img = document.createElement('img');
                img.className = 'gallery-img';
                img.src = url;
                img.alt = 'Imagen de la galería';
                img.loading = 'lazy';
                
                // Crear overlay con acciones
                const overlay = document.createElement('div');
                overlay.className = 'image-overlay';
                overlay.innerHTML = `
                    <div class="image-info">
                        <div>${new Date().toLocaleDateString()}</div>
                        <div>${url.length > 30 ? url.substring(0, 30) + '...' : url}</div>
                    </div>
                    <div class="image-actions">
                        <button class="action-btn view-btn" title="Ver en tamaño completo">
                            <i class="fas fa-expand"></i>
                        </button>
                        <button class="action-btn delete-btn" title="Eliminar imagen">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                `;
                
                // Agregar elementos a la tarjeta
                imageCard.appendChild(img);
                imageCard.appendChild(overlay);
                
                // Insertar antes del estado vacío
                gallery.insertBefore(imageCard, emptyState);
                
                // Evento para seleccionar imagen al hacer clic
                img.addEventListener('click', function() {
                    selectImage(imageCard);
                });
                
                // Evento para el botón de eliminar en el overlay
                const deleteBtn = overlay.querySelector('.delete-btn');
                deleteBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    deleteImage(imageCard);
                });
                
                // Evento para el botón de vista completa
                const viewBtn = overlay.querySelector('.view-btn');
                viewBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    viewFullscreen(img.src);
                });
                
                // Efecto visual al agregar
                imageCard.style.opacity = '0';
                imageCard.style.transform = 'scale(0.8) translateY(20px)';
                
                setTimeout(() => {
                    imageCard.style.transition = 'opacity 0.5s ease, transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
                    imageCard.style.opacity = '1';
                    imageCard.style.transform = 'scale(1) translateY(0)';
                }, 10);
                
                // Crear partículas de efecto
                const rect = imageCard.getBoundingClientRect();
                createParticles(rect.left + rect.width/2, rect.top + rect.height/2, '#6d5dfc', 20);
                
                // Mostrar notificación
                if (showNotification) {
                    showToast('Imagen agregada correctamente', 'success');
                }
                
                // Actualizar contador
                updateImageCounter();
                
                // Limpiar campo de entrada
                imageUrlInput.value = '';
            }
            
            // Seleccionar una imagen
            function selectImage(imageCard) {
                // Si ya está seleccionada, deseleccionar
                if (imageCard === selectedImage) {
                    imageCard.classList.remove('selected');
                    selectedImage = null;
                    deleteButton.disabled = true;
                    return;
                }
                
                // Deseleccionar imagen anterior si existe
                if (selectedImage) {
                    selectedImage.classList.remove('selected');
                }
                
                // Seleccionar nueva imagen
                imageCard.classList.add('selected');
                selectedImage = imageCard;
                deleteButton.disabled = false;
                
                // Efecto visual
                createParticles(
                    imageCard.offsetLeft + imageCard.offsetWidth/2,
                    imageCard.offsetTop + imageCard.offsetHeight/2,
                    '#43cea2',
                    12
                );
            }
            
            // Eliminar imagen
            function deleteImage(imageCard) {
                // Crear efecto visual de eliminación
                imageCard.style.transition = 'opacity 0.4s ease, transform 0.4s cubic-bezier(0.755, 0.05, 0.855, 0.06)';
                imageCard.style.opacity = '0';
                imageCard.style.transform = 'scale(0.5) rotate(15deg)';
                
                // Crear partículas de eliminación
                const rect = imageCard.getBoundingClientRect();
                createParticles(rect.left + rect.width/2, rect.top + rect.height/2, '#ef4444', 25);
                
                // Eliminar después de la animación
                setTimeout(() => {
                    // Si la imagen eliminada es la seleccionada, limpiar selección
                    if (imageCard === selectedImage) {
                        selectedImage = null;
                        deleteButton.disabled = true;
                    }
                    
                    // Eliminar del DOM
                    imageCard.remove();
                    
                    // Actualizar contador
                    updateImageCounter();
                    
                    // Mostrar notificación
                    showToast('Imagen eliminada', 'error');
                }, 400);
            }
            
            // Ver imagen en pantalla completa
            function viewFullscreen(url) {
                const overlay = document.createElement('div');
                overlay.style.cssText = `
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background-color: rgba(0, 0, 0, 0.9);
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    z-index: 2000;
                    opacity: 0;
                    transition: opacity 0.3s ease;
                `;
                
                const img = document.createElement('img');
                img.src = url;
                img.style.cssText = `
                    max-width: 90%;
                    max-height: 90%;
                    object-fit: contain;
                    border-radius: 8px;
                    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
                    transform: scale(0.9);
                    transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
                `;
                
                overlay.appendChild(img);
                document.body.appendChild(overlay);
                
                // Animar entrada
                setTimeout(() => {
                    overlay.style.opacity = '1';
                    img.style.transform = 'scale(1)';
                }, 10);
                
                // Cerrar al hacer clic
                overlay.addEventListener('click', function() {
                    overlay.style.opacity = '0';
                    img.style.transform = 'scale(0.9)';
                    setTimeout(() => overlay.remove(), 300);
                });
                
                // Prevenir propagación al hacer clic en la imagen
                img.addEventListener('click', function(e) {
                    e.stopPropagation();
                });
            }
            
            // Alternar modo oscuro/claro
            function toggleDarkMode() {
                isDarkMode = !isDarkMode;
                document.body.classList.toggle('dark-mode', isDarkMode);
                
                // Cambiar icono del botón
                const icon = themeToggle.querySelector('i');
                icon.className = isDarkMode ? 'fas fa-sun' : 'fas fa-moon';
                
                // Guardar preferencia en localStorage
                localStorage.setItem('darkMode', isDarkMode);
                
                // Mostrar notificación
                showToast(`Modo ${isDarkMode ? 'oscuro' : 'claro'} activado`, 'info');
            }
            
            // Cargar preferencia de modo oscuro
            function loadDarkModePreference() {
                const savedMode = localStorage.getItem('darkMode');
                if (savedMode !== null) {
                    isDarkMode = savedMode === 'true';
                    document.body.classList.toggle('dark-mode', isDarkMode);
                    
                    // Cambiar icono del botón
                    const icon = themeToggle.querySelector('i');
                    icon.className = isDarkMode ? 'fas fa-sun' : 'fas fa-moon';
                }
            }
            
            // Event Listeners
            addButton.addEventListener('click', function() {
                const url = imageUrlInput.value.trim();
                if (url) {
                    addImageToGallery(url);
                } else {
                    showToast('Por favor, introduce una URL de imagen', 'error');
                }
            });
            
            imageUrlInput.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    addButton.click();
                }
            });
            
            deleteButton.addEventListener('click', function() {
                if (selectedImage) {
                    deleteImage(selectedImage);
                }
            });
            
            themeToggle.addEventListener('click', toggleDarkMode);
            
            // Permitir arrastrar y soltar imágenes (bonus)
            imageUrlInput.addEventListener('dragover', function(e) {
                e.preventDefault();
                this.style.borderColor = '#6d5dfc';
                this.style.boxShadow = '0 0 0 3px rgba(109, 93, 252, 0.2)';
            });
            
            imageUrlInput.addEventListener('dragleave', function() {
                this.style.borderColor = '';
                this.style.boxShadow = '';
            });
            
            imageUrlInput.addEventListener('drop', function(e) {
                e.preventDefault();
                this.style.borderColor = '';
                this.style.boxShadow = '';
                
                // Intentar obtener URL de la imagen arrastrada
                const text = e.dataTransfer.getData('text');
                if (text && isValidImageUrl(text)) {
                    this.value = text;
                    showToast('URL de imagen pegada desde arrastre', 'info');
                } else {
                    showToast('No se pudo obtener una URL de imagen válida del arrastre', 'error');
                }
            });
            
            // Inicializar la aplicación
            loadDarkModePreference();
            initializeGallery();
            
            // Mostrar mensaje de bienvenida
            setTimeout(() => {
                showToast('¡Bienvenido a Nexus Gallery! Arrastra URLs de imágenes al campo de entrada', 'info');
            }, 1000);
        });
    </script>
</body>
</html>
